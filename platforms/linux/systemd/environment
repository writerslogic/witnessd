# /etc/witnessd/environment
# Environment variables for witnessd daemon

# Log level: debug, info, warn, error
# WITNESSD_LOG_LEVEL=info

# Data directory for MMR database and witness logs
# WITNESSD_DATA_DIR=/var/lib/witnessd

# Configuration file path
# WITNESSD_CONFIG=/etc/witnessd/config.toml

# Socket path for IPC
# WITNESSD_SOCKET=/run/witnessd/witnessd.sock

# Enable verbose logging
# WITNESSD_VERBOSE=false

# Anchor configuration
# WITNESSD_ANCHOR_INTERVAL=3600

# Privacy settings
# WITNESSD_PRIVACY_MODE=strict

# Performance tuning
# WITNESSD_BUFFER_SIZE=4096
# WITNESSD_FLUSH_INTERVAL=60

# TLS settings (for remote anchoring)
# WITNESSD_TLS_CERT=/etc/witnessd/tls/cert.pem
# WITNESSD_TLS_KEY=/etc/witnessd/tls/key.pem

# Keybase integration
# WITNESSD_KEYBASE_USERNAME=
# WITNESSD_KEYBASE_ENABLE=false

# Blockchain anchoring
# WITNESSD_BLOCKCHAIN_ENABLE=false
# WITNESSD_BLOCKCHAIN_NETWORK=mainnet
