<?xml version="1.0" encoding="UTF-8"?>
<!-- D-Bus service file for IBus witnessd engine -->
<!DOCTYPE busconfig PUBLIC "-//freedesktop//DTD D-BUS Bus Configuration 1.0//EN"
  "http://www.freedesktop.org/standards/dbus/1.0/busconfig.dtd">
<busconfig>
  <policy user="root">
    <allow own="org.freedesktop.IBus.Witnessd"/>
  </policy>

  <policy context="default">
    <allow send_destination="org.freedesktop.IBus.Witnessd"/>
    <allow receive_sender="org.freedesktop.IBus.Witnessd"/>
  </policy>
</busconfig>
