#!/bin/bash
# prerm script for witnessd

set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop the service if running
        if [ -d /run/systemd/system ]; then
            systemctl stop witnessd.service >/dev/null 2>&1 || true
            systemctl stop witnessd.socket >/dev/null 2>&1 || true
        fi
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
