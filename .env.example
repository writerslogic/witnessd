# witnessd Environment Variables
# Copy to .env and customize (never commit .env!)

# Database paths (defaults shown)
WITNESSD_EVENT_STORE=/home/user/.witnessd/events.db
WITNESSD_MMR_PATH=/home/user/.witnessd/mmr.bin
WITNESSD_CONFIG=/home/user/.witnessd/config.toml

# Signing key path
WITNESSD_SIGNING_KEY=/home/user/.ssh/witnessd_signing_key

# TPM configuration (optional)
WITNESSD_TPM_DEVICE=/dev/tpmrm0
WITNESSD_TPM_SIMULATOR=false
TPM2TOOLS_TCTI=device:/dev/tpmrm0

# External timestamping (optional)
WITNESSD_TSA_URL=https://freetsa.org/tsr
WITNESSD_OTS_CALENDAR=https://a.pool.opentimestamps.org

# Logging
WITNESSD_LOG_LEVEL=info
WITNESSD_AUDIT_LOG=/var/log/witnessd/audit.log

# Development/testing
WITNESSD_DEBUG=false
WITNESSD_TEST_MODE=false
